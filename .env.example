# Limites / operação
MAX_UPLOAD_MB=4
TEMP_RETENTION_DAYS=7
RATE_LIMIT_PER_MINUTE=6
RATE_LIMIT_MIN_INTERVAL_MS=1000

# Token para endpoint admin de setup
SETUP_TOKEN=influe-setup-2025

